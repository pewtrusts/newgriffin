{
    "chart": {
        "styledMode": true,
        "className": "griffin",
        "spacingBottom": 0,
        "spacingRight": 20
    },
    "credits": {
        "enabled": false
    },
    "exporting": {
        "enabled": false
    },
    "lang": {
        "thousandsSep": ",",
        "numericSymbols": [
            "k",
            "m",
            "b", 
            "t"
        ]
    },
    "plotOptions": {
        "pie": {
            "innerSize": "56%",
            "dataLabels": {
                "enabled": false,
                "connectorShape": "straight",
                "crop": false,
                "overflow": "allow"
            },
            "showInLegend": true
        },
        "tilemap": {
            "states": {
                "hover": {               
                    "halo": null,
                    "color": null,  
                    "brightness": 0 
                }
            },
            "tooltip": {
                "headerFormat": ""
                },
            "pointPadding" : 1,
            "dataLabels": {
                "useHTML": true,
                "style": {
                  "textOutline": false,
                  "lineWidth": 5,
                  "textAlign": "center",
                  "fontSize": "12px"
                }
              }
        },
        "series": {
            "states": {
                "inactive": {
                    "enabled": false
                }
            },
            "dataLabels": {
                "crop": false,
                "overflow": "allow",
                "padding": 5,
                "y": 0
            }
        }
    },
    "legend": {
        "symbolWidth": 18,
        "margin": 27,
        "itemMarginBottom": 10,
        "symbolRadius": 0
    },
    "tooltip": {
        "dateTimeLabelFormats": {
            "day": "%b %e",
            "week": "%b %e"
        }
    },
    "time": {
        "useUTC": false
    },
    "title": {
        "text": ""
    },
    "xAxis": {
       
        "dateTimeLabelFormats": {
            "day": "%b %e", 
            "week": "%b %e" 
        },
        "labels": {
            "overflow": "allow"
        },
        "tickLength": 0


       
    },
    "yAxis": {
        "title": null,
        "labels": {
            "overflow": "allow"
        }
    }
}